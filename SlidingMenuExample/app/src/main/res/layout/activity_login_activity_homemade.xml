<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gnirt69.slidingmenuexample.LoginActivityHomemade"
    android:background="@drawable/bakgrund">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/login"
        android:onClick="onButtonClick"
        android:textColor="#ffffff"
        android:background="@drawable/cornersbutton"
        android:textSize="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginBottom="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2"
        android:singleLine="true"
        android:maxLength="12"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText1"
        android:hint="Användarnamn"
        android:singleLine="true"
        android:padding="10dp"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/editText2"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:maxLength="12"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="false" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:hint="Lösenord"
        android:paddingRight="0dp"
        android:singleLine="true"
        android:password="true"
        android:padding="10dp"
        android:textSize="20dp"
        android:layout_above="@+id/login"
        android:layout_alignLeft="@+id/editText1"
        android:layout_alignStart="@+id/editText1"
        android:layout_marginBottom="30dp" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/imageView"
        android:src="@drawable/baraloggamartin"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:layout_above="@+id/editText1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ej användare? Registera dig!"
        android:id="@+id/button2"
        android:background="@drawable/cornersbutton"
        android:onClick="onButtonClick"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/login"
        android:layout_alignStart="@+id/login" />

</RelativeLayout>
