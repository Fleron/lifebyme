<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/bakgrund"
    android:layout_height="match_parent">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add variable"
        android:id="@+id/addvariable"
        android:layout_gravity="right"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add member"
        android:id="@+id/add_member"
        android:layout_marginTop="64dp"
        android:layout_below="@+id/addvariable"
        android:layout_alignLeft="@+id/addvariable"
        android:layout_alignStart="@+id/addvariable" />
</RelativeLayout>